# Git
abbr "g"="git"
abbr "ga"="git add"
abbr "gaa"="git add --all"
abbr "gbd"="git branch --delete"
abbr "gcam"="git commit --all --message"
abbr "gcb"="git checkout -b"
abbr "gco"="git checkout"

# Terraform
abbr "tf"="terraform"
abbr "tfa"="terraform apply"
abbr "tfa\\!"="terraform apply -auto-approve"
abbr "tfap"="terraform apply -parallelism=1"
abbr "tfc"="terraform console"
abbr "tfd"="terraform destroy"
abbr "tfd\\!"="terraform destroy -auto-approve"
abbr "tfdp"="terraform destroy -parallelism=1"
abbr "tff"="terraform fmt"
abbr "tffr"="terraform fmt -recursive"
abbr "tfi"="terraform init"
abbr "tfir"="terraform init -reconfigure"
abbr "tfiu"="terraform init -upgrade"
abbr "tfiur"="terraform init -upgrade -reconfigure"
abbr "tfo"="terraform output"
abbr "tfp"="terraform plan"
abbr "tfs"="terraform state"
abbr "tfsh"="terraform show"
abbr "tft"="terraform test"
abbr "tfv"="terraform validate"
abbr "tfw"="terraform workspace"
abbr "tfwl"="terraform workspace list"
abbr "tfws"="terraform workspace select"
